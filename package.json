{
  "name": "wpmovejs",
  "version": "0.1.0",
  "description": "TypeScript CLI to move/sync WordPress between environments (JS reimplementation of wordmove)",
  "license": "MIT",
  "type": "module",
  "bin": {
    "wpmovejs": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/cli.js --help"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "which": "^4.0.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.2.4",
    "typescript": "^5.6.3"
  },
  "tsup": {
    "entry": [
      "src/cli.ts"
    ],
    "format": ["esm"],
    "sourcemap": true,
    "clean": true,
    "outDir": "dist",
    "splitting": false,
    "banner": {
      "js": "#!/usr/bin/env node"
    }
  }
}
