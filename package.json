{
  "name": "@adarok/wpmovejs",
  "version": "0.6.1",
  "description": "TypeScript CLI to move/sync WordPress between environments (JS reimplementation of wordmove)",
  "license": "MIT",
  "type": "module",
  "bin": {
    "wpmovejs": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "npm run build && vitest run --config vitest.e2e.config.ts",
    "test:e2e:setup": "docker compose -f tests/e2e/docker/docker-compose.yml up -d --build",
    "test:e2e:teardown": "docker compose -f tests/e2e/docker/docker-compose.yml down -v",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "start": "node dist/cli.js --help",
    "prepublishOnly": "npm run build",
    "release": "npm run test && npm run build && git add -A && git commit -m \"Release v$npm_package_version\" && git tag v$npm_package_version && git push origin main --tags"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "dotenv": "^16.4.5",
    "execa": "^9.6.0",
    "fs-extra": "^11.2.0",
    "ora": "^9.0.0",
    "which": "^5.0.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adarok/wpmovejs.git"
  },
  "bugs": {
    "url": "https://github.com/Adarok/wpmovejs/issues"
  },
  "homepage": "https://github.com/Adarok/wpmovejs#readme",
  "keywords": [
    "wordpress",
    "wp-cli",
    "deploy",
    "sync",
    "rsync",
    "ssh",
    "wordmove"
  ],
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "src/cli.ts"
    ],
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "clean": true,
    "outDir": "dist",
    "splitting": false,
    "banner": {
      "js": "#!/usr/bin/env node"
    }
  }
}
