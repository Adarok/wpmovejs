{
  "name": "@adarok/wpmovejs",
  "version": "0.2.2",
  "description": "TypeScript CLI to move/sync WordPress between environments (JS reimplementation of wordmove)",
  "license": "MIT",
  "type": "module",
  "bin": {
    "wpmovejs": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/cli.js --help",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "execa": "^9.6.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "which": "^5.0.0",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Adarok/wpmovejs.git"
  },
  "bugs": {
    "url": "https://github.com/Adarok/wpmovejs/issues"
  },
  "homepage": "https://github.com/Adarok/wpmovejs#readme",
  "keywords": [
    "wordpress",
    "wp-cli",
    "deploy",
    "sync",
    "rsync",
    "ssh",
    "wordmove"
  ],
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "src/cli.ts"
    ],
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "clean": true,
    "outDir": "dist",
    "splitting": false,
    "banner": {
      "js": "#!/usr/bin/env node"
    }
  }
}
